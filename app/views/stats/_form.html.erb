<%= simple_form_for(@stat) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :hits %>
    <%= f.input :url, as: :string  %>
    <%= f.input :shorturl %>
    <%= f.input :sanitized_url %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
